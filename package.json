{
  "name": "blockchain-monitoring-dashboard",
  "version": "1.0.0",
  "description": "A lightweight three-tier web application for monitoring blockchain test reports from moonwall",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vinxi dev",
    "build": "vinxi build",
    "start": "vinxi start",
    "server:dev": "bun run --watch src/server/index.ts",
    "server:build": "bun build src/server/index.ts --outdir ./dist --target bun",
    "server:start": "bun run dist/index.js",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:integration": "NODE_ENV=test bun test src/tests/integration",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:test": "docker-compose --profile test up -d postgres-test",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run src/db/migrate.ts",
    "db:seed": "bun run src/db/seed.ts",
    "db:studio": "drizzle-kit studio",
    "db:reset": "bun run src/db/reset.ts",
    "lint": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/typography": "^0.5.16",
    "@types/bun": "latest",
    "autoprefixer": "^10.4.21",
    "drizzle-kit": "^0.31.4",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.11",
    "typescript": "^5"
  },
  "dependencies": {
    "@solidjs/router": "^0.15.3",
    "@solidjs/start": "^1.1.7",
    "@tanstack/solid-table": "^8.21.3",
    "@tanstack/solid-virtual": "^3.13.12",
    "solid-js": "^1.9.7",
    "vinxi": "^0.5.8"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
